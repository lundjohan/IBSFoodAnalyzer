<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/stattagname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TAG NAME"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/stattype"
        app:layout_constraintRight_toLeftOf="@+id/stattype"

        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/stattype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SCORE"

        app:layout_constraintStart_toEndOf="@+id/stattagname"
        app:layout_constraintLeft_toRightOf="@+id/stattagname"

        app:layout_constraintEnd_toStartOf="@+id/quantity_stat"
        app:layout_constraintRight_toLeftOf="@+id/quantity_stat"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/quantity_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="QUANTITY"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toEndOf="@+id/stattype"
        app:layout_constraintLeft_toRightOf="@+id/stattype"

        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/avg_stat_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stattagname"/>
</androidx.constraintlayout.widget.ConstraintLayout>
