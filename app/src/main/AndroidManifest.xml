<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ibsanalyzer.diary">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.ibsanalyzer.application.MyCustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/foodanalyzer_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/foodanalyzer_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MealActivity">
        </activity>
        <activity
            android:name=".RatingActivity">
        </activity>
        <activity
            android:name=".BmActivity">
        </activity>
        <activity android:name=".TagAdderActivity"/>
        <activity
            android:name=".OtherActivity">
        </activity>
        <activity
            android:name=".ExerciseActivity">
        </activity>
        <!-- The 'adjust-pan' is for that the soft keyboard should not push up views -->
        <activity
            android:name=".SaveEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".EditEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".LoadEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <service
            android:name="com.ibsanalyzer.external_storage.SaveDBIntentService"
            android:exported="false">
        </service>
        <service
            android:name="com.ibsanalyzer.external_storage.SaveToCSVIntentService"
            android:exported="false">
        </service>
        <activity
            android:name=".TagTemplateAdderActivity"
            android:parentActivityName=".TagAdderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ibsanalyzer.diary.TagAdderActivity"/>
        </activity>
        <activity android:name=".TagTemplateEditActivity">
        </activity>
        <activity
            android:name="com.ibsanalyzer.settings.StatSettingsActivity">
        </activity>
        <activity
            android:name="com.ibsanalyzer.settings.GeneralSettingsActivity">
        </activity>
        <activity
            android:name="com.ipaulpro.afilechooser.FileChooserActivity"
            android:enabled="@bool/use_activity"
            android:exported="true"
            android:icon="@drawable/ic_chooser"
            android:label="@string/choose_file">
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.OPENABLE"/>

                <data android:mimeType="*/*"/>
            </intent-filter>
        </activity>
        <activity android:name="com.ibsanalyzer.external_storage.FilePicker">
        </activity>
        <activity android:name=".AverageStatActivity">
        </activity>
        <activity android:name=".BlueZoneStatActivity">
        </activity>
        <activity android:name=".CompleteStatActivity">
        </activity>
        <activity android:name=".BristolStatActivity">
        </activity>
        <activity
            android:name="com.ibsanalyzer.drawer.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>