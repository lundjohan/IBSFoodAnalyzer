<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.johanlund.ibsfoodanalyzer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.johanlund.application.MyCustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/foodanalyzer_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/foodanalyzer_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.johanlund.ibsfoodanalyzer.MealActivity">
        </activity>
        <activity android:name="com.johanlund.ibsfoodanalyzer.RatingActivity">
        </activity>
        <activity android:name="com.johanlund.ibsfoodanalyzer.BmActivity">
        </activity>
        <activity android:name="com.johanlund.ibsfoodanalyzer.TagAdderActivity"/>
        <activity android:name="com.johanlund.ibsfoodanalyzer.OtherActivity">
        </activity>
        <activity android:name="com.johanlund.ibsfoodanalyzer.ExerciseActivity">
        </activity>
        <!-- The 'adjust-pan' is for that the soft keyboard should not push up views -->
        <activity
            android:name="com.johanlund.ibsfoodanalyzer.SaveEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.johanlund.ibsfoodanalyzer.EditEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.johanlund.ibsfoodanalyzer.LoadEventsTemplateActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <service
            android:name="com.johanlund.external_storage.SaveDBIntentService"
            android:exported="false">
        </service>
        <service
            android:name="com.johanlund.external_storage.SaveToCSVIntentService"
            android:exported="false">
        </service>
        <service
            android:name="com.johanlund.external_storage.SaveToCSVForGraphIntentService"
            android:exported="false">
        </service>

        <activity
            android:name="com.johanlund.ibsfoodanalyzer.TagTypeAdderActivity"
            android:parentActivityName="com.johanlund.ibsfoodanalyzer.TagAdderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.johanlund.ibsfoodanalyzer.TagAdderActivity"/>
        </activity>
        <activity android:name="com.johanlund.ibsfoodanalyzer.TagTypeEditActivity">
        </activity>
        <activity android:name="com.johanlund.settings.StatSettingsActivity">
        </activity>
        <activity android:name="com.johanlund.settings.GeneralSettingsActivity">
        </activity>
        <activity
            android:name="com.ipaulpro.afilechooser.FileChooserActivity"
            android:enabled="@bool/use_activity"
            android:exported="true"
            android:icon="@drawable/ic_chooser"
            android:label="@string/choose_file">
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.OPENABLE"/>

                <data android:mimeType="*/*"/>
            </intent-filter>
        </activity>
        <activity android:name="com.johanlund.statistics.AvgStatActivity">
        </activity>
        <activity android:name="com.johanlund.statistics.CompleteStatActivity">
        </activity>
        <activity android:name="com.johanlund.statistics.BristolStatActivity">
        </activity>
        <activity
            android:name="com.johanlund.statistics_settings.PortionStatSettingsActivity"
            android:label="Portion Stat Settings">
        </activity>
        <activity
            android:name="com.johanlund.statistics.NewPortionRangeActivity"
            android:parentActivityName="com.johanlund.statistics_settings.PortionStatSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.johanlund.statistics_settings.PortionStatSettingsActivity"/>
        </activity>
        <activity
            android:name="com.johanlund.drawer.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.johanlund.statistics_settings.AvgRatingSettingsActivity">
        </activity>
        <activity android:name="com.johanlund.statistics_settings.AvgBmSettingsActivity">
        </activity>
        <activity android:name="com.johanlund.info.InfoActivity">
        </activity>
        <activity
            android:name="com.johanlund.about.AboutActivity"
            android:parentActivityName="com.johanlund.drawer.DrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.johanlund.drawer.DrawerActivity"/>
        </activity>
        <activity android:name="com.johanlund.info.ActivityInfoContent">
        </activity>
    </application>

</manifest>