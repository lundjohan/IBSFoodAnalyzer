<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EventLayout">
        <!-- the starting time of the event-->
        <attr name="timeLine" format="string" />

        <!-- the line that is portions in meal, and type in exercise-->
        <attr name="secondLine" format="string" />

        <!-- all non-TagEvents has some string property to the right-->
        <attr name="rightLine" format="string" />

        <!-- the img icon that clearly shows which type of event it is-->
        <attr name="itemImg" format="reference" />

        <!-- the background color of the img-->
        <attr name="itemColor" format="reference" />

        <!-- in case of event has tags (it is a Meal or Other Event) build up tagsList, otherwise -->
        <attr name="hasTags" format="boolean" />
    </declare-styleable>
    <declare-styleable name="HeadLineLayout">
        <!-- the text string of textview-->
        <attr name="textString" format="string"/>
        <attr name="notReady" format="boolean" />
    </declare-styleable>
    <declare-styleable name="StatMenuItemLayout">
        <!-- the text string of textview-->
        <attr name="textStatMenu" format="string" />
        <attr name ="idOfSettingsBtn" format="integer"/>
    </declare-styleable>
</resources>