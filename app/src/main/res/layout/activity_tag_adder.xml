<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.johanlund.ibsfoodanalyzer.TagAdderActivity">


    <TextView
        android:id="@+id/infoAboutAddingNewTagType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Tag Type has yet been added. Press the plus button in upper right corner to add a Tag Type."
        android:visibility="gone"/>

    <SearchView
        android:id="@+id/searchTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoAboutAddingNewTagType">

    </SearchView>

    <ListView
        android:id="@+id/listOfTags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTags"
        app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>
