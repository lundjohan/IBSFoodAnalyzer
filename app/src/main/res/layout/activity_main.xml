<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibsanalyzer.inputday.MainActivity"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        tools:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="90dp">


        <ImageButton
            android:id="@+id/mealBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/meal"
            android:contentDescription="Meal"
            android:onClick="newMealActivity" />

        <ImageButton
            android:id="@+id/otherBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/mealBtn"
            android:layout_toRightOf="@id/mealBtn"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Other"
            android:onClick="newMeal" />

        <ImageButton
            android:id="@+id/exerciseBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Exercise"
            android:layout_alignParentBottom = "true"
            android:layout_toEndOf= "@id/otherBtn"
            android:layout_toRightOf = "@id/otherBtn" />

        <ImageButton
            android:id="@+id/bmBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Bowel Movement"
            android:layout_alignParentBottom = "true"
            android:layout_toEndOf= "@id/exerciseBtn"
            android:layout_toRightOf = "@id/exerciseBtn" />

        <ImageButton
            android:id="@+id/scoreBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:layout_alignParentBottom = "true"
            android:layout_toEndOf= "@id/bmBtn"
            android:layout_toRightOf = "@id/bmBtn" />

        <ImageButton
            android:id="@+id/templateBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Template"
            android:layout_alignParentBottom = "true"
            android:layout_toEndOf= "@id/scoreBtn"
            android:layout_toRightOf = "@id/scoreBtn" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
