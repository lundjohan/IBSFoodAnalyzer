<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibsanalyzer.inputday.MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/eventsLayout"
        android:layout_width="0dp"
        android:layout_height="446dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/mealBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageButton
        android:id="@+id/mealBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/meal"
        android:contentDescription="Meal"
        android:onClick="newMealActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/otherBtn"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/otherBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"

        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/meal"
        android:contentDescription="Other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mealBtn"
        app:layout_constraintRight_toLeftOf="@+id/exerciseBtn" />

    <ImageButton
        android:id="@+id/exerciseBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/meal"
        android:contentDescription="Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/otherBtn"
        app:layout_constraintRight_toLeftOf="@+id/bmBtn" />

    <ImageButton
        android:id="@+id/bmBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"

        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/exerciseBtn"
        android:layout_toRightOf="@id/exerciseBtn"
        android:layout_weight="1"
        android:background="@drawable/meal"
        android:contentDescription="Bowel Movement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/exerciseBtn"
        app:layout_constraintRight_toLeftOf="@+id/scoreBtn" />

    <ImageButton
        android:id="@+id/scoreBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bmBtn"
        app:layout_constraintRight_toLeftOf="@+id/templateBtn" />

    <ImageButton
        android:id="@+id/templateBtn"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/meal"
        android:contentDescription="Template"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/scoreBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
