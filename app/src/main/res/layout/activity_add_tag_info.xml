<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ibsanalyzer.custom_views.HeadLineLayout
        android:id="@+id/zeroAboutHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:idOfInfoBtn="@+id/uniqueNotImportantName0"
        custom:infoBtnExists="false"
        custom:textString="Concepts"/>
    <com.ibsanalyzer.custom_views.SecondHeadLine
        android:id="@+id/z"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zeroAboutHeadLine"
        custom:textForH2="When to add a Tag?"/>

    <TextView
        android:id="@+id/infoMealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Tags are 'food products', 'liquids' or 'actions'. Add them to your Meal/ Other/ Exercise events. Statistics use them later to match against how good rating is that follows, and they are also used to see how good they are for bowel movements."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/z"/>

    <com.ibsanalyzer.custom_views.SecondHeadLine
        android:id="@+id/FirstHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMealText"
        custom:textForH2="How to add a Tag?"/>

    <TextView
        android:id="@+id/infoTypeOfExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="If it is the first time you are adding a Tag, you must add a Tag Type first - click the plus button in the upper right corner."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstHeadLine"/>
</android.support.constraint.ConstraintLayout>