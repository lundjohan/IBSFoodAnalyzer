<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.ibsanalyzer.custom_views.HeadLineLayout
        android:id="@+id/zeroAboutHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:idOfInfoBtn="@+id/uniqueNotImportantName0"
        custom:infoBtnExists="false"
        custom:textString="Concepts"/>
    <com.ibsanalyzer.custom_views.SecondHeadLine
        android:id="@+id/z"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zeroAboutHeadLine"
        custom:textForH2="When to use Exercise"/>

    <TextView
        android:id="@+id/infoMealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="When you have been DOING something, like running, meditating etc."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/z"/>

    <com.ibsanalyzer.custom_views.SecondHeadLine
        android:id="@+id/FirstHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMealText"
        custom:textForH2="Type of Exercise"/>

    <TextView
        android:id="@+id/infoTypeOfExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="A tag will be added when you add 'Type of Exercise'. Internally this will work in the same way as tags do for Meals and Other events."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstHeadLine"/>

    <com.ibsanalyzer.custom_views.SecondHeadLine
        android:id="@+id/SecHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTypeOfExercise"
        custom:textForH2="Level of Intensity"/>

    <TextView
        android:id="@+id/infoTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Did you run until you tasted blood, or was it a relaxed walk in the city?"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SecHeadLine"/>
</android.support.constraint.ConstraintLayout>
    </ScrollView>