<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_marked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="gone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="81dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabsMarked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:tabGravity="center"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorOrange"
            app:tabTextColor="@color/colorWhite">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Template" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ibsanalyzer.inputday.DiaryFragment">

        <!-- TODO: Update blank fragment layout -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/events_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mealBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/mealBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/meal"
            android:contentDescription="Meal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/otherBtn" />

        <ImageButton
            android:id="@+id/otherBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"

            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Other"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mealBtn"
            app:layout_constraintRight_toLeftOf="@+id/exerciseBtn" />

        <ImageButton
            android:id="@+id/exerciseBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Exercise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/otherBtn"
            app:layout_constraintRight_toLeftOf="@+id/bmBtn" />

        <ImageButton
            android:id="@+id/bmBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"

            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/exerciseBtn"
            android:layout_toRightOf="@id/exerciseBtn"
            android:layout_weight="1"
            android:background="@drawable/meal"
            android:contentDescription="Bowel Movement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/exerciseBtn"
            app:layout_constraintRight_toLeftOf="@+id/scoreBtn" />

        <ImageButton
            android:id="@+id/scoreBtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/colorPurple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/bmBtn"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
